<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\SFPCommon.props" />

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Crc32.NET" />
    <PackageReference Include="Flurl.Http" />
    <PackageReference Include="Ionic.Zlib.Core" />
    <PackageReference Include="PortableJsonSettingsProvider" />
    <PackageReference Include="LazyCache" />
    <PackageReference Include="System.ServiceModel.Primitives" />
    <PackageReference Include="Gameloop.Vdf" />
    <PackageReference Include="FileWatcherEx" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>PublicSettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <None Update="NLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
